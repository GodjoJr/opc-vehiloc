{% extends 'base.html.twig' %}

{% block title %}
    Hello AdminVoitureController!
{% endblock %}

{% block body %}
<section id="add">
    <a href="index.html">‚Üê Retour</a>
    <h1>Ajouter une voiture</h1>
    {{ form_start(form) }}
        <div class="input">
           {{ form_row(form.nom) }}
        </div>
        <div class="input">
            {{ form_row(form.description) }}
        </div>
        <div class="flex-input">
            <div class="input">
                {{ form_row(form.prix_quotidien) }}
            </div>
            <div class="input">
            {{ form_row(form.prix_mensuel) }}
            </div>
        </div>
        <div class="flex-input">
            <div class="input">
                {{ form_row(form.places) }}
            </div>
            <div class="input">
                {{ form_row(form.is_manuelle) }}
            </div>
        </div>
        
        <button class="btn-add">Ajouter</button>
    {{ form_end(form) }}
</section>
{% endblock %}
